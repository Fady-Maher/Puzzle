<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    android:layout_marginRight="10dp"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/top_headlines_card"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp">
        <ImageView
            android:id="@+id/animal_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_search_news"
            android:src="@drawable/android_developer"
            android:scaleType="centerCrop">

        </ImageView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_animal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Android Developer"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txt_animal_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Click here to view the animal                 "
            android:maxLines="3"
            android:layout_marginBottom="10dp"
            android:drawableRight="@drawable/ic_right_icon"
            />

    </LinearLayout>

    </LinearLayout>


