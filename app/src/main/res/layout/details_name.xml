                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/status"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/love_gif"
                    />

    </RelativeLayout>
