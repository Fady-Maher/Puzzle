<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="210dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/backgound_dialog">

            <TextView
                android:id="@+id/txt_que_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:text="Choose Your Path"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_color_app"/>


            <LinearLayout
                android:layout_below="@+id/txt_que_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">


                <Button
                    android:id="@+id/btn_puzzle"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/btn_signup"
                    android:gravity="center"
                    android:text="Puzzle"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color_app"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_vet"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Veterinary"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/text_color_app"
                    android:background="@drawable/btn_signup"
                    android:textStyle="bold"/>

            </LinearLayout>



        </RelativeLayout>

